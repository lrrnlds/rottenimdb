<div class="container-fluid">
  <div class="col-sm-6 col-sm-offset-3 text-center">
    <h1>Login:</h1>
    <%= form_tag '/login' do %>

    <div>
      <% if @errors %>
        <ul>
          <% @errors.each do |error|%>
            <li><%= error %></li>
          <% end %>
        </ul>
      <%end%>
    </div>
    <p>Email: <%= text_field_tag :email %></p>
    <p>Password: <%= password_field_tag :password %></p>
    <%= submit_tag "Submit" %>
    <% end %>
  </div>
</div>
